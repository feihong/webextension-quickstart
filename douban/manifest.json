{

  "manifest_version": 2,
  "name": "Douban Music Metadata",
  "version": "1.0",

  "description": "Grab music metadata from Douban Music.",

  "icons": {
    "48": "icons/icon.svg"
  },

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://music.douban.com/artists/player*"],
      "js": ["main.js"]
    }
  ]

}
